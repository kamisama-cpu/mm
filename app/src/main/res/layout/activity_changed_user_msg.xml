<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.ChangedUserMsgActivity">

    <TextView
        android:textColor="@color/While"
        android:background="@color/main_amatory_color"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_25"
        android:text="头像上传/资料填写"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50" />
    <TextView
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="@dimen/sp_25"
        android:text="请放入本人照片"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_upload"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150" />
    <TextView
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="@dimen/sp_25"
        android:text="一个没有故事的名字"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_name"
        android:gravity="center"
        android:hint="昵称"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50" />

    <Button
        android:background="@drawable/upload_btn_style1"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/While"
        android:text="完成"
        android:id="@+id/btn_accomplish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50" />

</LinearLayout>